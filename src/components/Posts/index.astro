---
import { getCollection } from "astro:content";
import Post from "./Post.astro";

const posts = await getCollection("posts", ({ body }) => body !== undefined);
---
<ul
    class="sm:max-w-3xl"
>
    { posts.length > 0 ? posts.sort((a, b) => a.data.published_at!.getTime() - b.data.published_at!.getTime()).map((e) => 
    <Post
        entry={e}
    />
) : <li>No posts yet.<li/> }
</ul>

