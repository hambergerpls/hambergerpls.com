---
import type { CollectionEntry } from "astro:content";
import TechBadge from "../TechBadge.astro";

interface Props {
    entry: CollectionEntry<"projects">;
}


const { entry } = Astro.props;
---
<div class="p-4">
    <h1 class="text-bold text-2xl">{entry.data.title}</h1>
    <br>
    <p>{entry.data.excerpt}</p>
    <div class="mt-2">
        {entry.data.technologies?.map(tech => <TechBadge tech={tech}/>)}
    </div>
    <br>
    <div class="grid gap-4">
        <a href={entry.data.link} class="btn btn-primary" target="_blank"><span class="icon-[tabler--external-link]"/>Link</a>
    </div>
</div>
